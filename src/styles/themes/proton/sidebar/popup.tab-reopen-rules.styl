.TabReopenRulesPopup .rule .controls-box
  position: relative
  display: none
  justify-content: flex-end
  align-items: center
  height: 28px
  padding: 0 2px
  margin-left: auto
.TabReopenRulesPopup .rule:hover .controls-box
  display: flex

.TabReopenRulesPopup .rule .btn-up
.TabReopenRulesPopup .rule .btn-down
.TabReopenRulesPopup .rule .btn-rm
  position: relative
  width: 24px
  height: 24px
  &:before
    content: ''
    position: absolute
    width: 100%
    height: 100%
    border-radius: var(--general-border-radius)
    background-color: var(--toolbar-fg)
    opacity: 0
  &:hover:before
    opacity: .1
  &:active:before
    opacity: .2
  > svg
    position: relative
    top: 4px
    left: 4px
    width: 16px
    height: 16px
    fill: var(--popup-fg)
.TabReopenRulesPopup .rule .btn-up > svg
  transform: rotateZ(180deg)

.TabReopenRulesPopup .SelectField
.TabReopenRulesPopup .ToggleField
.TabReopenRulesPopup .TextField
  margin: 3px 4px 0

.TabReopenRulesPopup .ctrls
  padding: 0 6px
  margin: 4px 0 6px
