@import '../../../mixins'

.sync-data
  position: relative
  width: calc(100% - 32px)
  justify-content: center
  align-items: flex-start
  padding: 8px 16px
  &:not(:first-of-type)
    margin-top: 3px

  &:before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    border-radius: 3px
    background-color: var(--toolbar-fg)
    opacity: 0

  &:not(:first-of-type):after
    content: ''
    position: absolute
    top: -2px
    left: 6px
    width: calc(100% - 12px)
    height: 1px
    background-color: var(--toolbar-fg)
    opacity: .1

  &.-no-separator:after
    display: none

  &:hover:before
    opacity: .1
  &:active:before
    opacity: .08

.sync-title
  position: relative
  font-size: rem(16)
  color: var(--toolbar-fg)
  padding: 2px 0
  margin: 0 0 8px

.sync-list
  position: relative
  display: grid
  grid-template-columns: 1fr
  grid-gap: 8px 0
  padding: 0 0 0 16px

.sync-item
  position: relative
  display: grid
  justify-content: center
  align-items: center
  grid-template-columns: 12fr 5fr 3fr 3fr auto auto;
  &:before
    content: ''
    position: absolute
    top: -1px
    left: -4px
    width: calc(100% + 5px)
    height: calc(100% + 2px)
    border-radius: 4px
    background-color: var(--toolbar-fg)
    opacity: 0
  &:hover:before
    opacity: .03

.sync-name
  position: relative
  font-size: rem(14)
  color: var(--toolbar-fg)
  opacity: .7
  white-space: nowrap
  overflow: hidden
  text-overflow: ellipsis

.sync-info
  position: relative
  font-size: rem(12)
  color: var(--toolbar-fg)
  margin-left: 8px
  opacity: .7
  white-space: nowrap

.btn.sync-btn
  font-size: rem(12)
  padding: 3px 6px
  margin-left: 8px
